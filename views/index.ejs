  <header class="header">
    <h1>Welcome to Sportsurge</h1>
    <div class="header-border"></div>

    <p class="bold">
      Sportsurge: Free Live Sports Streaming in HD
    </p>

    <p class="light">
      Please share this link to help improve visibility on search engines.
    </p>
  </header>

  <section class="section">
    <h2>Sports Streams and Schedule</h2>
    <div class="section-border"></div>
  </section>

  <main class="list">
    <% matches.forEach(m=> { %><a class="match-card"
        href="/stream/<%= m.League.toLowerCase().trim() %>/<%= m.MatchID %>/<%= (m.Team1+'-vs-'+m.Team2).toLowerCase().replace(/\s+/g,'-') %>"><img
          src="<%= m.LeagueLogo || m['League logo'] %>" class="icon">
        <div class="info">
          <div class="league">
            <%= m.League %>
          </div>
          <div class="title">
            <%= m.Team1 %> vs <%= m.Team2 %>
          </div>
          <div class="time">
            <%= m.Date %> • <%= m.Time %>
          </div>
        </div>
      </a>
      <% }) %>

        <section class="article-box">

